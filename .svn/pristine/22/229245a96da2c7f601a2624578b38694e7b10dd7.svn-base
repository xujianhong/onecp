<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical"
        android:padding="30dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_register_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_phone" />

            <EditText
                android:id="@+id/etInputPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_sms" />

            <EditText
                android:id="@+id/etVerCode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/tvSendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="获取验证码"
                android:textColor="@color/blue_500"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_user" />

            <EditText
                android:id="@+id/etInputUserName"
                android:layout_width="match_parent"

                android:layout_height="45dp"
                android:background="@null"
                android:hint="输入用户名"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_sex" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spSelectSex"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/sex"
                android:theme="@style/Spinner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_birth" />

            <TextView
                android:id="@+id/tvSelectBirth"
                android:layout_width="match_parent"
                android:singleLine="true"

                android:layout_height="45dp"
                android:background="@null"
                android:clickable="true"
                android:drawableEnd="@mipmap/ic_pull"
                android:gravity="center_vertical"
                android:hint="生日日期"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_credentials_type" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spCredentialsType"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/credentialsType"
                android:theme="@style/Spinner" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_user" />

            <EditText
                android:id="@+id/etInputCredentialsNumber"
                android:layout_width="match_parent"

                android:layout_height="45dp"
                android:background="@null"
                android:hint="输入证件号码"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_province" />

            <TextView
                android:id="@+id/tvSelectProvince"
                android:layout_width="match_parent"
                android:singleLine="true"

                android:layout_height="45dp"
                android:background="@null"
                android:clickable="true"
                android:drawableEnd="@mipmap/ic_pull"
                android:gravity="center_vertical"
                android:hint="选择省市区"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_school" />

            <TextView
                android:id="@+id/tvSelectSchool"
                android:layout_width="match_parent"

                android:layout_height="45dp"
                android:background="@null"
                android:clickable="true"
                android:drawableEnd="@mipmap/ic_pull"
                android:gravity="center_vertical"
                android:hint="选择学校"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1.2"
                android:background="@drawable/shape_edit_input_bg">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spSelectGrade"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="10dp"
                    android:entries="@array/grade"
                    android:gravity="center_vertical"
                    android:theme="@style/Spinner" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_edit_input_bg">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spSelectClass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="10dp"
                    android:entries="@array/classNumber"
                    android:gravity="center_vertical"
                    android:theme="@style/Spinner" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_password" />

            <EditText
                android:id="@+id/etInputPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="设置密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="注册即代表您同意用户协议"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnExit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="返回登陆"
                android:textColor="@color/blue_500"
                android:textSize="14sp" />
        </LinearLayout>

        <Button

            android:id="@+id/btnRegister"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/shape_blue_no_bg"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>