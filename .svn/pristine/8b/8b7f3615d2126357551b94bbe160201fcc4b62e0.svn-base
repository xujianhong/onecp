<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/color_f5f5f5"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="432pt"
        android:background="@drawable/mine_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="40pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60pt"
            android:background="@drawable/shape_mine_avatar_bg"
            android:padding="2pt"
            android:src="@drawable/avatar_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1" />

        <TextView
            android:id="@+id/tvNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24pt"
            android:textColor="@color/white"
            android:textSize="34pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            tools:text="李小二" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
        <LinearLayout
                android:visibility="gone"
                android:id="@+id/llCertificationStatus"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:layout_height="104pt">

            <ImageView
                    android:layout_marginEnd="38pt"
                    android:src="@drawable/ic_certification_status"
                    android:layout_width="40pt"
                    android:layout_height="40pt"/>

            <TextView
                    android:text="认证状态"
                    android:textSize="30pt"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            <TextView
                    android:layout_marginRight="20pt"
                    android:id="@+id/tvCertificationStatus"
                    android:textSize="24pt"
                    android:textColor="@color/color_e92126"
                    android:text="未认证"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="12pt"
                    android:layout_height="22pt"/>
        </LinearLayout>
        <View
                android:background="@color/color_d6d6d6"
                android:layout_marginStart="30pt"
                android:layout_marginEnd="30pt"
                android:layout_width="match_parent"
                android:layout_height="1pt"/>
        <LinearLayout
                android:id="@+id/llStudyCircle"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:layout_height="104pt">

            <ImageView
                    android:layout_marginEnd="38pt"
                    android:src="@drawable/ic_study_circle"
                    android:layout_width="40pt"
                    android:layout_height="40pt"/>

            <TextView
                    android:text="我的学习圈"
                    android:textSize="30pt"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <ImageView
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="12pt"
                    android:layout_height="22pt"/>
        </LinearLayout>

        <View
                android:background="@color/color_d6d6d6"
                android:layout_marginStart="30pt"
                android:layout_marginEnd="30pt"
                android:layout_width="match_parent"
                android:layout_height="1pt"/>
        <LinearLayout
                android:id="@+id/llShieldingDynamics"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:layout_height="104pt">

            <ImageView
                    android:layout_marginEnd="38pt"
                    android:src="@drawable/ic_shielding_dynamics"
                    android:layout_width="40pt"
                    android:layout_height="40pt"/>

            <TextView
                    android:text="屏蔽用户"
                    android:textSize="30pt"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <ImageView
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="12pt"
                    android:layout_height="22pt"/>
        </LinearLayout>

        <View
                android:background="@color/color_d6d6d6"
                android:layout_marginStart="30pt"
                android:layout_marginEnd="30pt"
                android:layout_width="match_parent"
                android:layout_height="1pt"/>
        <LinearLayout
                android:id="@+id/llAboutUs"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:layout_height="104pt">

            <ImageView
                    android:layout_marginEnd="38pt"
                    android:src="@drawable/ic_about_us"
                    android:layout_width="40pt"
                    android:layout_height="40pt"/>

            <TextView
                    android:text="关于我们"
                    android:textSize="30pt"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <ImageView
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="12pt"
                    android:layout_height="22pt"/>
        </LinearLayout>

        <View
                android:background="@color/color_d6d6d6"
                android:layout_marginStart="30pt"
                android:layout_marginEnd="30pt"
                android:layout_width="match_parent"
                android:layout_height="1pt"/>
        <LinearLayout
            android:id="@+id/llPrivate"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="30pt"
            android:paddingEnd="30pt"
            android:layout_height="104pt">

            <ImageView
                android:layout_marginEnd="38pt"
                android:src="@drawable/ic_about_us"
                android:layout_width="40pt"
                android:layout_height="40pt"/>

            <TextView
                android:text="隐私政策"
                android:textSize="30pt"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:src="@drawable/ic_right_arrow"
                android:layout_width="12pt"
                android:layout_height="22pt"/>
        </LinearLayout>

        <View
            android:background="@color/color_d6d6d6"
            android:layout_marginStart="30pt"
            android:layout_marginEnd="30pt"
            android:layout_width="match_parent"
            android:layout_height="1pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="30pt"
            android:paddingEnd="30pt"
            android:layout_height="104pt">

            <ImageView
                android:layout_marginEnd="38pt"
                android:src="@drawable/ic_about_us"
                android:layout_width="40pt"
                android:layout_height="40pt"/>

            <TextView
                android:text="版本信息"
                android:textSize="30pt"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/mine_version"
                android:text="1.0"
                android:textSize="30pt"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="@color/color_d6d6d6"
            android:layout_marginStart="30pt"
            android:layout_marginEnd="30pt"
            android:layout_width="match_parent"
            android:layout_height="1pt"/>

        <LinearLayout
                android:id="@+id/llChangePwd"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:layout_height="104pt">

            <ImageView
                    android:layout_marginEnd="38pt"
                    android:src="@drawable/ic_modify_passowrd"
                    android:layout_width="40pt"
                    android:layout_height="40pt"/>

            <TextView
                    android:text="修改密码"
                    android:textSize="30pt"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <ImageView
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="12pt"
                    android:layout_height="22pt"/>
        </LinearLayout>

        <View
                android:background="@color/color_d6d6d6"
                android:layout_marginStart="30pt"
                android:layout_marginEnd="30pt"
                android:layout_width="match_parent"
                android:layout_height="1pt"/>

        <LinearLayout
            android:id="@+id/llFeedBack"
            android:layout_width="match_parent"
            android:layout_height="104pt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="30pt"
            android:paddingEnd="30pt">

            <ImageView
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginEnd="38pt"
                android:src="@drawable/icon_feedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="@color/color_333333"
                android:textSize="30pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="12pt"
                android:layout_height="22pt"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>

        <View
            android:background="@color/color_d6d6d6"
            android:layout_marginStart="30pt"
            android:layout_marginEnd="30pt"
            android:layout_width="match_parent"
            android:layout_height="1pt"/>

        <LinearLayout
            android:id="@+id/llCleanCache"
            android:layout_width="match_parent"
            android:layout_height="104pt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="30pt"
            android:paddingEnd="30pt">

            <ImageView
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginEnd="38pt"
                android:src="@drawable/ic_modify_passowrd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textColor="@color/color_333333"
                android:textSize="30pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="12pt"
                android:layout_height="22pt"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginStart="30pt"
            android:layout_marginEnd="30pt"
            android:background="@color/color_d6d6d6" />

        <LinearLayout
                android:id="@+id/llLoginOut"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="30pt"
                android:paddingEnd="30pt"
                android:layout_height="104pt">

            <ImageView
                    android:layout_marginEnd="38pt"
                    android:src="@drawable/ic_login_out"
                    android:layout_width="40pt"
                    android:layout_height="40pt"/>

            <TextView
                    android:text="注销登录"
                    android:textSize="30pt"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <ImageView
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="12pt"
                    android:layout_height="22pt"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>