<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
             android:background="@color/color_f5f5f5"
              android:layout_height="match_parent">
    <TextView
            android:textSize="40pt"
            android:text="@string/app_name"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="88pt"/>
    <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="280pt"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvGrade"
            android:paddingStart="4pt"
            android:paddingEnd="4pt"
            android:layout_marginTop="20pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_marginStart="20pt"
            android:layout_marginEnd="20pt"
            android:layout_marginBottom="26pt"
            android:background="@drawable/shape_home_menu_bg"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="76pt">

            <View
                    android:layout_marginStart="22pt"
                    android:layout_marginEnd="22pt"
                    android:layout_width="4pt"
                    android:background="@color/color_e4854d"
                    android:layout_height="34pt"/>

            <TextView
                    android:text="资讯"
                    android:textSize="32pt"
                    android:textColor="@color/color_e4854d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
                android:background="@color/color_d6d6d6"
                android:layout_width="match_parent"
                android:layout_height="1pt"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>